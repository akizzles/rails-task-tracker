<section class="todoapp">
  <header class="header">
    <h1>New User Registration!</h1>
    <%= form_for(@user) do |f| %>
      <%= f.text_field :name, class: "new-todo", placeholder: "Name" %>
      <%= f.text_field :email, class: "new-todo", placeholder: "Login Email" %>
      <%= f.password_field :password, class: "new-todo", placeholder: "Choose a password" %>
      <%= f.submit %>
      <% end %>

  </header>

  <footer class="footer">
  </footer>

</section>