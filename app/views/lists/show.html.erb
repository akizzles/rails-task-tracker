<section class="todoapp">
  <header class="header">
    <h1><%= @list.name %></h1>
    <%= form_for([@list, @item]) do |f| %>
        <%= f.text_field :description, class: "new-todo", autofocus: true, placeholder: @item.errors.full_messages_for(:description).first || "Enter a new item..." %></br>
        <%= f.submit :style => "display: none" %>
    <% end %>
  </header>

  <section class="main">
    <ul class="todo-list">
    <%= render collection: @list.items, partial: "items/item_li", as: :item %>
    
    </ul>
  </section>

  <footer class="footer">
    <ul class="filters">
      <li><%= link_to "home", root_path %></li>
      <li><%= link_to "signup", signup_path %></li>
      <li><%= link_to "logout", logout_path %></li>
    </ul>
  </footer>

</section>